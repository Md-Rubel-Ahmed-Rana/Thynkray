
generator client {
  provider = "prisma-client-js"
  output   = "generations/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid()) @db.Uuid
  name          String
  email         String   @unique
  password      String
  role          String
  bio           String?  @db.Text
  profile_image String?  @db.Text
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
}
